

public class Birinci implements Runnable{

	private int sayi= 0;
	
	public Birinci() {
		
	}

	@Override
	public void run() {
		while(sayi<10) {
		System.out.println("Ä°leri x:  "+sayi);
		sayi++;
		try {
			Thread.sleep(100);
			} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			}
		}
	}	
}


public class DenemeThread {
	

	
	public DenemeThread() {
		
	}
	
	public static void main(String[] args) {
		
		Thread t1 = new Thread(new Birinci());
		t1.start(); 
		
		Thread t2 = new Thread(new Ikinci());
		t2.start();		
	}
}


public class Ikinci implements Runnable{

	private int sayi= 50;
	
	public Ikinci() {
		
	}
		
	public void run() {
		while(sayi>0) {
			System.out.println("Geri y:  "+sayi);
			sayi--;
			}
		
	}

}
