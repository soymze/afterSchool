
import java.util.Scanner;

public class ders4 {
	static void main (String args[])
	{
		
		Scanner sc = new Scanner(System.in);
		String isim;
		
		System.out.println("Adınız:	");
		isim=sc.nextLine();
		
		System.out.println("Merhaba"+ isim + ", nasılsın?"	);
		
		if(isim.equalsIgnoreCase("Emre")) {
			System.out.println("Tanıştığıma memnun oldum,"	+isim+	".");
			}
		}
			
	}
